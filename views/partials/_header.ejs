<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
       
        </div>
      </div>
      <% if (!username){ %>
        <form class="form-user" action="/login" method="POST" style="margin-left: 40%; margin-top: 0px;" >
          <div class="form-group mb-2" style="display: flex;">
            <input class="form-control" type="email" name="username" placeholder="Email" style="width: 200px; margin-top: 0px; margin-bottom: 20px">
            <button type="submit" class="btn btn-primary" style="background-color: rgb(165, 219, 14); margin-left: 5px; width: 100px; height: 40px; margin-top: 0px; text-transform: uppercase; color: rgb(236, 98, 5); border: none; font-size: 14px;">sign in</button>
          </div>
        </form>
      <% } else {%>
        <p style="color: rgb(5, 51, 5); margin-right: 10px; margin-top: 5px;">You are logged as <%= username %></p>
        <form method="POST" action="/logout" style="display: inline-block;">
          <input class="pure-button pure-button-primary" type="submit" value="Log Out" style="background-color: rgb(14, 163, 46); margin-left: 5px; width: 100px; height: 40px; margin-top: 0px; text-transform: uppercase; color: rgb(245, 241, 239); border: solid rgb(165, 219, 14) 1px; font-size: 14px;">
        </form>
      <% }%>
    </nav>

  </header>
